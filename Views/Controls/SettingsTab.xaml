<RadioButton x:Class="LibgenDesktop.Views.Controls.SettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Cursor="Hand">
    <RadioButton.Template>
        <ControlTemplate TargetType="RadioButton">
            <Border Name="OuterBorder" BorderThickness="0,0,2,0">
                <ContentPresenter Name="Content" Margin="8" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#428BCA" />
                    <Setter Property="TextBlock.FontWeight" Value="Medium" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </RadioButton.Template>
</RadioButton>
