<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:LibgenDesktop.Views.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="TabStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="DefaultToolbar" TargetType="{x:Type c:Toolbar}">
        <Setter Property="Margin" Value="0,8,8,0" />
        <Setter Property="IconForeground" Value="{StaticResource MaterialDesignBody}" />
    </Style>
    <Style x:Key="EmbeddedToolbar" TargetType="{x:Type c:Toolbar}">
        <Setter Property="Margin" Value="0,0,8,0" />
        <Setter Property="IconForeground" Value="{StaticResource PrimaryHueMidForegroundBrush}" />
        <Setter Property="Opacity" Value=".87" />
    </Style>
    <Style x:Key="TabTitle" TargetType="TextBlock">
        <Setter Property="MaxWidth" Value="100" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="Margin" Value="0,0,8,0" />
    </Style>
</ResourceDictionary>